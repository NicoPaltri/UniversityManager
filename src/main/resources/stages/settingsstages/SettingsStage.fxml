<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.lang.String?>
<BorderPane fx:id="mainPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.settingsbuttonapplication.SettingsButtonController"
            prefWidth="650" prefHeight="450">

    <!--- TOP -->
    <top>
        <VBox fx:id="topVBox" alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
            <children>
                <Label fx:id="topLabel" text="Impostazioni">
                    <font><Font size="32"/></font>
                </Label>
            </children>
        </VBox>
    </top>

    <!--- CENTER (TableView responsiva) -->
    <center>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="40" right="40"/>
            </padding>

            <children>

                <TableView fx:id="settingsTable"
                           VBox.vgrow="ALWAYS"
                           styleClass="field-container">
                    <columns>
                        <TableColumn fx:id="colName" text="Nome">
                            <style>
                                <String fx:value="col-name"/>
                            </style>
                        </TableColumn>
                        <TableColumn fx:id="colValue" text="Valore">
                            <style>
                                <String fx:value="col-num"/>
                            </style>
                        </TableColumn>
                    </columns>

                </TableView>

            </children>
        </VBox>
    </center>

    <!--- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="25"/>
            </padding>
            <children>
                <Button fx:id="selectButton" text="Seleziona"
                        onAction="#selectButtonOnAction"
                        styleClass="confirm-button"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
