<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.addbuttonapplication.AddExamButtonController"
            prefWidth="650" prefHeight="450">

    <!-- TOP -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
            <children>
                <Label text="Inserisci un nuovo esame">
                    <font>
                        <Font size="32"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <!-- CENTER -->
    <center>
        <GridPane hgap="10" vgap="18">
            <padding>
                <Insets left="40" right="40" top="20" bottom="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints halignment="LEFT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- NOME -->
            <Label text="Nome" GridPane.rowIndex="0"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <TextField fx:id="nameInputField" promptText="Nome esame" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- PESO -->
            <Label text="Peso" GridPane.rowIndex="1"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <TextField fx:id="weightInputField" promptText="Peso" prefWidth="80"/>
            </HBox>

            <!-- VOTO + IDONEITÀ -->
            <Label text="Voto" GridPane.rowIndex="2"/>
            <HBox fx:id="gradeBox"
                  spacing="10"
                  alignment="CENTER_LEFT"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="2">

                <TextField fx:id="gradeInputField"
                           promptText="Voto"
                           prefWidth="80"/>

                <!-- spazio elastico -->
                <Region HBox.hgrow="ALWAYS"/>

                <CheckBox fx:id="idoneitaCheckBox" text="Idoneità"/>
            </HBox>

            <!-- DATA -->
            <Label text="Data" GridPane.rowIndex="3"/>
            <HBox spacing="12" GridPane.columnIndex="1" GridPane.rowIndex="3">

                <TextField fx:id="dayInputField" promptText="gg" maxWidth="60"/>
                <TextField fx:id="monthInputField" promptText="mm" maxWidth="60"/>
                <TextField fx:id="yearInputField" promptText="aaaa" maxWidth="90"/>

            </HBox>

        </GridPane>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="20" bottom="25"/>
            </padding>
            <Button text="Conferma"
                    fx:id="addButton"
                    onAction="#confirmButtonOnAction"/>
        </HBox>
    </bottom>

</BorderPane>
